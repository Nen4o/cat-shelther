
        <section class="cats">
            <ul>
                {{#each cats}}
                <li>
                    <img src="{{imageUrl}}" alt="Black Cat">
                    <h3>{{name}}</h3>
                    <p><span>Breed: </span>{{breed}}</p>
                    <p><span>Description: </span>{{description}}</p>
                    <ul class="buttons">
                        <li class="btn edit"><a href="/cat/edit/{{_id}}">Change Info</a></li>
                        <li class="btn delete"><a href="/cat/shelter/{{_id}}">New Home</a></li>
                    </ul>
                </li>
                {{else}}
                <p>No cats yet....</p>
               {{/each}}
            </ul>
        </section>
